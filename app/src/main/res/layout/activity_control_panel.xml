<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/r01"
    tools:context=".ControlPanelActivity"
    android:id="@+id/myRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="8">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/tvDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="DAY"
            android:layout_alignParentStart="true"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="italic|bold"/>
            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NOT_LOGIN"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_below="@id/tvDays"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            <ImageView
                android:id="@+id/imgIconBg"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:layout_alignParentEnd="true"

                android:layout_marginRight="10dp"
                android:background="@drawable/circle"/>
            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/nav_header_desc"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="28dp"
                app:srcCompat="@mipmap/ic_launcher_round" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnLogIn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:background="@drawable/mybutton"
                />



        </RelativeLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/roomRole"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/c8_list"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:backgroundTint="#00000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:backgroundTint="#00000000"></TextView>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ME"
            android:textSize="20dp"
            android:onClick="gotoME"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/mybutton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:backgroundTint="#00000000"></TextView>
        <Button
            android:id="@+id/btnCreateRole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="create role"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/mybutton"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:backgroundTint="#00000000"></TextView>
        <Button
            android:id="@+id/btnGameStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="GAME START"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/mybutton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:backgroundTint="#00000000"></TextView>
        <Button
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="HISTROY"
            android:onClick="gotohistroy"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="@drawable/mybutton"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     "
            android:backgroundTint="#00000000"></TextView>
    </LinearLayout>

</LinearLayout>